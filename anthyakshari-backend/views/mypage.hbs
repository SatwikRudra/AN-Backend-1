<div class="container mt-4">
<div class="card" style="width: 18rem;">
<div class="card-header"> <h3>My Page</h3></div>
  <div class="card-body">
   <form action="/auth/mypage" method="post">
         <div class="form-group">
    <label for="exampleInputEmail1">Bio</label>
    <input type="text" class="form-control" id="exampleInputEmail1" value="{{user.userBio}}" name="bio" aria-describedby="emailHelp" placeholder="Enter Bio">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Achievements</label>
    <input type="text" class="form-control" id="exampleInputEmail1" value="{{user.userAchievements}}" name="achievements" aria-describedby="emailHelp" placeholder="Enter achievements">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Goals</label>
    <input type="text" class="form-control" id="exampleInputEmail1" value="{{user.userGoals}}" name="goals" aria-describedby="emailHelp" placeholder="Enter Goals">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Portflio Link</label>
    <input type="text" class="form-control" id="exampleInputPassword1" value="{{user.userPortflioLink}}" name="portflio" placeholder="Enter Portflio Link">
  </div>
   <div class="form-group">
    <label for="exampleInputPassword1">Honors & Awards</label>
    <input type="text" class="form-control" id="exampleInputPassword1" value="{{user.userAwards}}" name="awards"   placeholder="Enter Honors & Awards">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Website</label>
    <input type="text" class="form-control" id="exampleInputPassword1" value="{{user.userWebsite}}" name="website"   placeholder="Copy And Past Link">
  </div>
  <input type="submit" class="btn btn-primary" value="Update" >
</form>
  </div>
 
</div>

{{#if message}}
<h4 class="alert-danger mt-4">{{message}}</h4>

{{/if}}
</div>













